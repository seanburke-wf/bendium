{
  "manifest_version": 2,

  "name": "Bendium",
  "description": "Interact with Bender without leaving Chrome.",
  "version": "AUTOMATIC",
  "author": "George Lesica",

  "background": {
      "scripts": ["event_page.dart.js"],
      "persistent": false
  },

  "browser_action": {
    "default_title": "Bendium",
    "default_icon": "icons/icon19.png",
    "default_popup": "popup.html"
  },

  "commands": {},

  "icons": {
      "16": "icons/icon16.png",
      "19": "icons/icon19.png",
      "32": "icons/icon32.png",
      "38": "icons/icon38.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
  },

  "permissions": [
    "activeTab",
    "notifications",
    "tabs",
    "storage",
    "https://workiva.hipchat.com/v2/user/@Bender/message"
  ]
}
